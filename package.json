{
  "name": "design-system-packages",
  "version": "0.3.0",
  "workspaces": [
    "@utahdts/utah-design-system-header",
    "@utahdts/utah-design-system",
    "utah-design-system-website"
  ],
  "scripts": {
    "// pure tasks": "",
    "buildHeader": "npm run build -workspace=@utahdts/utah-design-system-header",
    "buildLibrary": "npm run build -workspace=@utahdts/utah-design-system",
    "buildWebsite": "npm run build -workspace utah-design-system-website",
    "cleanCoverage": "rimraf ./@utahdts/utah-design-system/coverage",
    "cleanDist": "rimraf ./utah-design-system-website/dist & rimraf ./@utahdts/utah-design-system/dist & rimraf ./@utahdts/utah-design-system-header/dist",
    "cleanExampleCreateReactApp": "rimraf ./examples/utah-header/create-react-app/node_modules & rimraf ./examples/utah-header/create-react-app/package-lock.json",
    "cleanNodeModules": "rimraf ./utah-design-system-website/node_modules & rimraf ./@utahdts/utah-design-system/node_modules & rimraf ./@utahdts/utah-design-system-header/node_modules & rimraf node_modules",
    "cleanPackageLock": "rimraf package-lock.json",
    "headerDev": "npm run watch -workspace=@utahdts/utah-design-system-header",
    "npmi": "npm i",
    "sassBuildHeader": "npm run sass-build -workspace=@utahdts/utah-design-system-header",
    "sassBuildLibrary": "npm run sass-build -workspace=@utahdts/utah-design-system",
    "watchLib": "npm run watch -workspace=@utahdts/utah-design-system",
    "websiteDev": "npm run dev -workspace=utah-design-system-website",
    
    "// test tasks": "",
    "circular": "npx madge --circular .",
    "circularg": "npx madge --circular --image circular.svg .",
    "test": "npm run test -workspace=@utahdts/utah-design-system",
    "test:ci": "npm run test:ci -workspace=@utahdts/utah-design-system",
    
    "// combo tasks": "",
    "build": "run-s buildHeader buildLibrary buildWebsite",
    "buildtest": "run-s build test:ci",
    "clean": "run-s cleanexamples cleanPackageLock cleanCoverage cleanDist cleanNodeModules",
    "cleanexamples": "run-s cleanExampleCreateReactApp",
    "cleanbuild": "run-s cleani build",
    "cleani": "run-s clean npmi",
    "dev": "npm run websiteDev",
    "publishHeader": "npm run publishHeader -workspace=@utahdts/utah-design-system",
    "publishLibrary": "npm run publishLibrary -workspace=@utahdts/utah-design-system",
    "reset": "run-s cleani websiteDev",
    "sassbuild": "run-s sassBuildHeader buildHeader sassBuildLibrary buildLibrary"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "rimraf": "4.4.1",
    "vite": "4.2.1",
    "vitest": "0.29.8"
  }
}
