{
  "name": "@utahdts/utah-design-system",
  "description": "Utah Design System React Library",
  "displayName": "Utah Design System React Library",
  "version": "0.5.3",
  "exports": {
    ".": {
      "development-local": "./index.js",
      "development": "./dist/utah-design-system.es.js",
      "production": "./dist/utah-design-system.es.js",
      "import": "./dist/utah-design-system.es.js",
      "require": "./dist/utah-design-system.umd.js",
      "default": ["./dist/utah-design-system.es.js", "./dist/utah-design-system.umd.js", "./index.js"]
    },
    "./css": "./dist/style.css",
    "./css/3-generic/normalize.css": "./css/3-generic/normalize.css",
    "./src/css/": "./src/css/",
    "./css/index.scss": "./css/index.scss"
  },
  "main": "index.js",
  "files": [
    "css",
    "dist",
    "react"
  ],
  "peerDependencies": {
    "react": "18.x",
    "react-router-dom": "6.x"
  },
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "publishLibrary": "npm publish --access public",
    "sass-build": "sass --no-source-map ./css/index.scss ./css/build/utah-design-system.css",
    "test:ci": "vitest run --coverage --mode development-local",
    "test-publish": "npm publish --dry-run",
    "test": "vitest",
    "watch": "vite build --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com:utahdts/utah-design-system.git",
    "directory": "library"
  },
  "keywords": [
    "design",
    "system",
    "utah",
    "react",
    "components"
  ],
  "author": "DTS Digital Experience <dtsui@utah.gov>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/utahdts/utah-design-system/issues"
  },
  "homepage": "https://github.com/utahdts/utah-design-system",
  "dependencies": {
    "@utahdts/utah-design-system-header": "0.4.3",
    "lodash": "4.17.21",
    "prop-types": "15.8.1",
    "react": "18.x",
    "react-popper": "2.3.0",
    "react-router-dom": "6.x",
    "use-immer": "0.9.0"
  },
  "devDependencies": {
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-istanbul": "0.29.8",
    "eslint": "8.37.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "sass": "1.60.0",
    "vite": "4.2.1",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "0.30.1"
  },
  "type": "module"
}
